<div class="date-container">
  <h2 class="date"><%= date %></h2>
</div>
<div class="text-container">
  <mark class="item-key"><%= "Period #{facade.course.period}" %></mark>
  <mark class="item-value"><%= " #{facade.course.name}" %></mark>
</div>

<div class="banner">
  <div class="dynamic-container">
    <div class="dynamic">
      <div class="course-card">
        <div class="student-container">
          <% facade.students.each do |student| %>
          <div class="student-card" id="attendance-<%= student.id %>">
            <div class="attendance-icon current attendance-<%= student.todays_attendance(facade.course.id) %>">
            </div>
            <div class="attendance-options">
              <div class="option">
                <div class="attendance-icon attendance-present"></div><h4 class="small-link">Present</h4>
              </div>
              <div class="option">
                <div class="attendance-icon attendance-absent"></div><h4 class="small-link">Absent</h4>
              </div>
              <div class="option">
                <div class="attendance-icon attendance-tardy"></div><h4 class="small-link">Tardy</h4>
              </div>
              <div class="option">
                <div class="attendance-icon attendance-present_no_response"></div><h4 class="small-link">Present No Response</h4>
              </div>
              <div class="option">
                <div class="attendance-icon attendance-absent_with_response"></div><h4 class="small-link">Absent With Response</h4>
              </div>
            </div>
            <%= link_to "#{student.first_name} #{student.last_name}", student_path(student.id, course_id: facade.course.id), class:"small-link" %>
            <div class="smaller-grey">
              #<%= student.student_id %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="dynamic-container">
    <div class="dynamic">
      <div class="grouping">
        <h3>Grouping</h3>
        <div class="random">
          <h4>Randomly:</h4>
          <label for="random-grouping">How many students per group</label>
          <input type="number" class="random-grouping" name="random-grouping" value="" max="<%= facade.students.count %>">
          <input type="submit" name="" value="PRESENT STUDENTS" class="random-present form-button">
          <input type="submit" name="" value="ALL STUDENTS" class="random-all form-button">

          <script type="text/javascript">
            $('.random-all').on('click', function(event) {
              var count = $('.random-grouping').val();
              var course_id = <%= facade.course.id %>;
              console.log($('.random-grouping').val());
              console.log(course_id);
              event.preventDefault();
              $.ajax({
                url: `/courses/${course_id}`,
                type: 'GET',
                data: {
                  group_count: count,
                },
                success: function(r){
                  alert("count" + count);
                },
              });
            });
          </script>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('.attendance-options').hide();
  });
  $('.current').on('click', function(event) {
    $(event.target).next().slideToggle();
  });
  $('.student-card').mouseleave(
  function(event) {
    $('.attendance-options').slideUp();
  });

  $('.option').on('click', function(event){
    var id = event.target.parentElement.parentElement.parentElement.id;
    var attendance = event.target.classList[1].split("-")[1];
    var course = event.target.parentElement.parentElement.parentElement.parentElement.parentElement.id;
    updateAttendance(id, course, attendance);
  });

  var updateAttendance = function(id, course, attendance) {
    fetch(`/api/v1/attendances?student_id=${id}&course_id=${course}&attendance=${attendance}`, {
      method: "PUT",
      headers: {
        "Content-Type": "application/json; charset=utf-8",
      },
    })
      .then((response) => response.json())
      .then(function(response){
        console.log("hello");
      });
    };

    var showUpdatedAttendance = function(id, course, attendance) {
      // debugger;
      $(`div#${course}.course-card div#${id}.student-card div.current`).remove();
      // debugger;
      $(`div#${course}.course-card div#${id}.student-card`).prepend(`<div class="attendance-icon current attendance-${attendance}"></div>`);
    };
</script>
