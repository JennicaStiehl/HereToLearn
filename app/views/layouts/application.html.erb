<!DOCTYPE html>
<html>
  <head>
    <title>HereToLearn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400&display=swap" rel="stylesheet">
  </head>

  <body>
    <header>
      <nav class="navbar nav-top">
        <a href="<%= welcome_path %>" class="navbarLogo">
          <%= image_tag("H2L-new.png", height: 100, class:"headerLogo") %>
          <h3>HereToLearn</h3>
        </a>
        <div class="menu-div">
          <ul class="navbarNav">
            <script type="text/javascript">

            </script>
            <% if current_user %>
              <li>
                <%= link_to "Dashboard", dashboard_path, class:"nav-button" %>
              </li>
              <li>
                <%= link_to "My Account", account_path, class:"nav-button" %>
              </li>
              <li>
                <%= link_to "Log Out", logout_path, class:"nav-button" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
      <% if current_user %>
        <div class="logged-in-as">
          <h3 class="test"><%= "Logged in as #{current_user.first_name} #{current_user.last_name}"  %>
          </h3>
        </div>
      <% end %>
    </header>
    <% if !flash.empty? %>
    <div class="flash-message">
      <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
      <% end %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
