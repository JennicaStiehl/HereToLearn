<div class="account-container">
  <div class="dynamic-container">
    <div class="dynamic">
      <div class="text-container">
        <%= form_for current_user, url: {action: "update"} do |f| %>
        <%= f.label "Old Password", label:'item-key' %>
        <br>
        <%= f.password_field "Old Password", :required => true, class: 'input-box' %>
        <br>
        <%= f.label "New Password", label:'item-key' %>
        <br>
        <%= f.password_field "New Password", :required => true, class: 'input-box' %>
        <br>
        <%= f.label "Confirm New Password", label:'item-key' %>
        <br>
        <%= f.password_field "Confirm New Password", :required => true, class: 'input-box' %>
        <br>

        <div class="submit-container">
          <%= f.submit "SUBMIT CHANGES", class:'form-button' %>
          <br>
          <%= link_to "CANCEL", account_path, class:'form-button' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
