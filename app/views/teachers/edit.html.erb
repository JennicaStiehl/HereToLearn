<div class="account-container">
  <div class="dynamic-container">
    <div class="dynamic">
      <div class="text-container">
        <%= form_for current_user, url: {action: "update"} do |f| %>
        <%= f.label :first_name, class:'item-key' %>
        <br>
        <%= f.text_field :first_name, class: 'input-box' %>
        <br>
        <%= f.label :last_name, class:'item-key' %>
        <br>
        <%= f.text_field :last_name, class: 'input-box' %>
        <br>
        <%= f.label :email, class:'item-key' %>
        <br>
        <%= f.text_field :email, class: 'input-box' %>
        <br>

        <div class="submit-container">
          <%= f.submit "Submit Changes", class:'form-button' %>
          <br>
          <%= link_to "Cancel", account_path, class:'form-button' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
