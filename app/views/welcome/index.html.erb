
<div class="banner">
  <div class="tagline-container">
    <div class="tagline">Find, create, and share strategies for <em>your</em> students.
      <br>
      <br>
      <div class="logo-image">
        <%= image_tag("arrow-logo-4.png", height: 300, class:"img") %>
      </div>
    </div>
  </div>
  <div class="dynamic-container">
    <div class="dynamic">
      <% if !current_user %>
      <div class="submit-container">
        <%= form_for :session, url: login_path do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class:'input-box', autofocus: true %>
        <br>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password, class:'input-box' %>
        <br>
        <div class="submit-container">
          <%= f.submit 'LOG IN', class: "form-button" %>
        </div>
        <% end %>
        <%= link_to "Forgot Password?", send_reset_link_path, class:"small-link" %>
      </div>
      <br>
      <hr>
      <div class="">
        <div class="welcome-student-container">
          <h3>Looking for Student Login?</h3>
          <%= link_to "Go To Login", student_auth_path, class: "survey-button" %>
        </div>
      </div>
      <hr>
      <div class="">
        <div class="submit-container">
          <%= link_to "View site as Guest", guest_path, class:'form-button' %>
        </div>
      </div>
      <% else %>
        <ul class ="welcome-course-container">
          <% current_user.courses.each do |course| %>
            <li class="text-container">
              <%= link_to "Period #{course.period}", course_path(course), class:"item-key" %>
              <%= link_to " #{course.name}", course_path(course), class:'item-value'%>
            </li>
            <br>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>


